{{! 
Це код container файлу для work сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/work"
}}

<div>
{{#with main}}
 <main>
    <section>
        {{> title data="Work history" big=true}}
    </section>
<div> <ul>
        {{#each works}}
            <li>
                <div>{{position}}</div>
                <br>

                <div>
                    {{duration.from}} - 
                    {{#if duration.to}}
                        {{duration.to}}
                    {{else}}
                        (досі тут працюємо)
                    {{/if}} 
                </div>

                <br>
        <div> {{#unless company.url}}
               <b>{{company.name}}</b>
                {{else}}
                <div>{{>link text=company.name href=company.url blank=true noLine=true}}</div>
             {{/unless}}
        </div>
                <br>
                <br>

                <div><strong>Project({{projectAmount}})</strong></div>

                 <br>

                 <ul>
                    {{#each projects}}
                    <li>
                        <div>{{> link text=name href=url blank=true isLine=false noLine=true}} </div> 
                    </li>
                       <br>
                    <li>
                         <div>{{> link text=about href=url blank=true isLine=false noLine=true}} </div>
                    </li>
                    <br>
                     <div>
                        <li>
                            <div><em>Project stacks({{stackAmount}})</em></div>
                            <br>
                           <lu>
                            {{#each stacks}}
                              <li>
                                {{name}}
                              </li>
                            {{/each}}
                           </lu> 
                           <br>
                        </li>
                     </div>
                     <div>
                       <li>
                         <div><em>Project awards({{awardAmount}})</em></div>
                         <br>
                          <lu>
                            {{#each awards}}
                            <li>
                                {{name}}
                            </li>
                            {{/each}}
                          </lu> 
                         <br>
                        </li>
                      </div>
                   {{/each}}
                 </ul>
                <br>
            </li>
        {{/each}}
        </ul>
</div>
</main>
{{/with}}

 </div>

